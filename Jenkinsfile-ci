pipeline {
   agent any

   tools {
        maven 'MAVEN_HOME'
   }

   stages {
        stage('checkout') {
            steps {
                checkout scm
                echo 'git checkout success'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package -DskipTests=true';
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    sh 'mvn surefile:test'
                    junit '**/target/surfire-reports/TEST-*.xml'
                }
            }
        }
   }

    post {
      success {
           echo 'Build Success'
      }
    }
}