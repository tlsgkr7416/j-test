pipeline {
   agent any

   tools {
        maven 'maven'
        jdk 'jdk'
   }

   stages {
        stage('checkout') {
            steps {
                checkout scm
                echo 'git checkout success'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                    echo 'build success'
                }
            }
        }

   }

}